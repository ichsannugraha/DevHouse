<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="5dp"
        android:backgroundTint="@color/colorPrimary">

        <ImageView
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="30dp"
            android:layout_height="match_parent"/>

        <TextView
            android:text="Kembali"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/namaSellerDetail"
                    android:text="Nama Seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/gambarProdukDetail"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:src="@drawable/image_rumah"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tanggalUploadDetail"
                android:text="Tanggal Upload"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/namaProdukDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Produk"
                android:textSize="21sp"
                android:fontFamily="roboto"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/hargaProdukDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga Produk"
                android:textSize="22sp"
                android:fontFamily="roboto"
                android:textColor="#FF0101"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="9dp">

                <Button
                    android:text="Whatsapp"
                    android:id="@+id/phoneProdukDetail"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:paddingEnd="5dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/button_effect_whatsapp"
                    android:textAllCaps="false"
                    android:drawableEnd="@drawable/logo_whatsapp"
                    android:elevation="5dp"/>

                <Button
                    android:text="Favorite"
                    android:id="@+id/favoriteProdukDetail"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/button_effect_main_primary"
                    android:elevation="5dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi Rumah"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/deskripsiProdukDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="2dp"
                    android:textSize="14sp"
                    android:textColor="#000000"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="32dp"
                android:textSize="17sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/alamatProdukDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="40dp"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fasilitas"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="32dp"
                android:textSize="17sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/fasilitasProdukDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="40dp"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luas Tanah"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="32dp"
                android:textSize="17sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/luasTanahProdukDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="40dp"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luas Bangunan"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="32dp"
                android:textSize="17sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/luasBangunanProdukDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="40dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>