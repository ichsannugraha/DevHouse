<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">

                <TextView
                    android:id="@+id/namaSellerDetail"
                    android:text="Nama Seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/logo_crown"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                app:cardCornerRadius="7dp">

                <ImageView
                    android:id="@+id/gambarProdukDetail"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/image_rumah"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/namaProdukDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Produk"
                android:textSize="19sp"
                android:fontFamily="roboto"
                android:lineHeight="22px"
                android:textColor="#000000"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:id="@+id/hargaProdukDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga Produk"
                android:textSize="20sp"
                android:fontFamily="roboto"
                android:lineHeight="23px"
                android:textColor="#FF0101"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="31dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="9dp">

                <ImageButton
                    android:id="@+id/phoneProdukDetail"
                    android:layout_width="57dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/logo_phone"
                    android:background="#FFFFFF"/>

                <ImageButton
                    android:id="@+id/recycleProdukDetail"
                    android:layout_width="57dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo_recycle"
                    android:background="#FFFFFF"/>

                <ImageButton
                    android:id="@+id/favoriteProdukDetail"
                    android:layout_width="57dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/logo_favorite"
                    android:background="#FFFFFF" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Produk"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="32dp"
                android:textSize="15dp"
                android:lineHeight="18px"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/deskripsiProdukDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="40dp"
                android:textSize="12dp"
                android:lineHeight="14px"
                android:textColor="#000000"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>