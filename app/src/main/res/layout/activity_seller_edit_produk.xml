<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerEditProdukActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="23dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/gambarProdukEdit"
                    android:src="@drawable/logo_add_photo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="18dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAMA PRODUK"
                android:textSize="14sp"
                android:lineHeight="14sp"
                android:textStyle="normal"
                android:fontFamily="Roboto"
                android:textColor="#000000"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="31dp"/>

            <EditText
                android:id="@+id/namaProdukEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="23dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HARGA"
                android:textSize="14sp"
                android:lineHeight="14sp"
                android:textStyle="normal"
                android:fontFamily="Roboto"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="31dp"/>

            <EditText
                android:id="@+id/hargaProdukEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="23dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALAMAT"
                android:textSize="14sp"
                android:lineHeight="14sp"
                android:textStyle="normal"
                android:fontFamily="Roboto"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="31dp"/>

            <EditText
                android:id="@+id/alamatProdukEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="23dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FASILITAS"
                android:textSize="14sp"
                android:lineHeight="14sp"
                android:textStyle="normal"
                android:fontFamily="Roboto"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="31dp"/>

            <EditText
                android:id="@+id/fasilitasProdukEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="23dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESKRIPSI"
                android:textSize="14sp"
                android:lineHeight="14sp"
                android:textStyle="normal"
                android:fontFamily="Roboto"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="31dp"/>

            <EditText
                android:id="@+id/deskripsiProdukEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="23dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LUAS TANAH"
                android:textSize="14sp"
                android:lineHeight="14sp"
                android:textStyle="normal"
                android:fontFamily="Roboto"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="31dp"/>

            <EditText
                android:id="@+id/luasTanahProdukEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="23dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="23dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="right">

                <Button
                    android:id="@+id/editProdukBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDIT PRODUK"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>