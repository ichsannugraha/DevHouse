<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/parentLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImageRumahMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/imageRumahMain"
                android:src="@drawable/image_rumah"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/namaProdukMain"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_below="@id/cardImageRumahMain"
            android:text="Nama Produk"
            android:textColor="#000000"
            android:textSize="19sp"
            android:textStyle="normal"
            android:fontFamily="roboto"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Harga Produk"
            android:id="@+id/hargaProdukMain"
            android:textSize="19sp"
            android:textColor="#FF0101"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:fontFamily="roboto"
            android:textStyle="normal"
            android:layout_below="@id/namaProdukMain"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>